<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="../wwwroot/css/bootstrap.min.css"></link>
</head>

<body>
    <script type="text/javascript" src="../wwwroot/js/jquery.min.js"></script>
    <script type="text/javascript" src="../wwwroot/js/bootstrap.min.js"></script>
    <div class="container">
        <!-- APPLICATION -->
        <div class="container">
            <div class="page-header">
                <h2>Select an Application</h2>
            </div>
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h4>Available Applications</h4>
                </div>
                <div class="panel-body">
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <ul>
                                <li>GoDaddy.com</li>
                                <li>Website Builder</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- PAGE -->
        <div class="container">
            <div class="page-header">
                <h2>Select a Page</h2>
            </div>
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h4>Available Pages</h4>
                </div>
                <div class="panel-body">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-sm-2 pull-right">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Page ID">
                                </div>
                            </div>
                            <div class="col-sm-2 pull-right">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="English Path">
                                </div>
                            </div>
                            <div class="pull-right">
                                Filter by:
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div> Hello World</div>
                        </div>

                        <div class="pull-right">
                            <button type="button" class="btn btn-success">
                    Add a Page
                </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- MARKET -->
        <div class="container">
            <div class="page-header">
                <h2>Select a Market</h2>
            </div>
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h4>Available Markets</h4>
                </div>
                <div class="panel-body">
                    <table style="width:100%">
                        <tr>
                            <th>Market</th>
                            <th>Meta Data 1</th>
                            <th>Meta Data 2</th>
                            <th>Meta Data 3</th>
                        </tr>
                        <tr>
                            <td>en-US</td>
                            <td>a</td>
                            <td>b</td>
                            <td>c</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <!-- -->
        <div class="container">
            <div class="page-header">
                <h2>Page Data</h2>
            </div>
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h4>Available Versions</h4>
                </div>
                <div class="panel-body">
                    <button type="button" class="btn btn-success pull-right">
                Add a Version
            </button>
                    <div class="col-md-12">
                        <div> Hello World</div>
                    </div>
                    <button type="button" class="btn btn-success pull-right">
                Publish Version
            </button>
                    <button type="button" class="btn btn-success pull-right">
                Activate Version
            </button>
                </div>
            </div>
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h4>Localized URL</h4>
                </div>
                <div class="panel-body">
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <label class="col-md-6" for="local-url">Localized URL: </label>
                            <input type="text" id="local-url" class="form-control col-md-6">
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h4>Generic Page Data</h4>
                </div>
                <div class="panel-body">
                    <div class="input-group">
                        <div class="col-md-12">
                            <div class="col-md-6">
                                <label class="col-md-2" for="title">Title: </label>
                                <input type="text" id="title" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-md-6">
                                <label class="col-md-6" for="subtitle">Subtitle: </label>
                                <input type="text" id="subtitle" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-md-6">
                                <label class="col-md-6" for="banner">Banner: </label>
                                <input type="text" id="banner" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="col-md-6">
                                <label class="col-md-6" for="image">Image: </label>
                                <input type="text" id="image" class="form-control">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>